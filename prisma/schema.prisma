generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  expenses       Expense[]
  incomes        Income[]
  budgets        Budget[]
  financialGoals FinancialGoal[]
  Goal           Goal[]
  Transaction    Transaction[]
}

model Expense {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  amount      Float
  description String
  category    String
  date        DateTime
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
}

model Income {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  amount      Float
  description String
  source      String
  date        DateTime
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
}

model Budget {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  category String
  amount   Float
  userId   String @db.ObjectId
  user     User   @relation(fields: [userId], references: [id])
}

model FinancialGoal {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  targetAmount  Float
  currentAmount Float
  deadline      DateTime?
  userId        String    @db.ObjectId
  user          User      @relation(fields: [userId], references: [id])
}

model Goal {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  category      String
  targetAmount  Float
  currentAmount Float
  deadline      DateTime
  userId        String   @db.ObjectId
  user          User     @relation(fields: [userId], references: [id])
}

model Transaction {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  description String
  amount      Float
  date        DateTime
  type        String // 'income' or 'expense'
  category    String
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
}
